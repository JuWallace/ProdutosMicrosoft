@inject Microsoft.AspNetCore.Identity.SignInManager<Usuario> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Usuario> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--<link href="~/lib/bootstrap/css/bootstrap.min_Cyber.css" rel="stylesheet" />-->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- As a link -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-route-id="0">E-commerce Noite</a>
        <a class="navbar-brand" asp-controller="Categoria" asp-action="Index" asp-route-id="0">Cadastrar Categoria</a>
        <a class="navbar-brand" asp-controller="Produto" asp-action="Index" asp-route-id="0">Cadastrar Produto</a>
        <a class="navbar-brand" asp-controller="Usuario" asp-action="Index" asp-route-id="0">Cadastrar Usuário</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Usuario" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Usuario" asp-action="Login">Login</a>
                </li>
                }

            </ul>

        </div>
    </nav>

    <div class="conteudo">
        @RenderBody()
    </div>

    <hr />
    <footer class="rodape">
        <p>
            Desenvolvido por Juliano Wallace - @DateTime.Now.Year - &copy;
        </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>


</body>
</html>
