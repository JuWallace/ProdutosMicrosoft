@model List<Produto>

@{ List<Categoria> categorias = ViewBag.Categorias; }

<div id="categorias" class="div-categoria">
    @foreach (Categoria categoriaCadastrada in categorias)
    {
        <a class="link-categoria" asp-controller="Home" asp-action="Index"
           asp-route-id="@categoriaCadastrada.Id">@categoriaCadastrada.Nome</a>
    }
</div>

<div id=" produtos" class="row">
    @foreach (Produto produtoCadastrado in Model)
    {
    <div class="col-sm-3"div-conteudo>
        <img src="~/images/@produtoCadastrado.Imagem" alt="@produtoCadastrado.Descricao"
             style="width:120px;height:100px" class="img-thumbnail" /><br />
        <span>
            @produtoCadastrado.Nome
        </span><br />
        
        <span><b>Preço:</b>
            @produtoCadastrado.Preco.ToString("C2")
        </span>
    </div>
    }
</div>
