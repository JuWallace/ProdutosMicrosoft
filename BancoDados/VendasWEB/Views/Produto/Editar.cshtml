@model Produto
@*Tecnologia de View - Razor *@
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Produto</title>
</head>
<body>
    <form asp-action="Editar" asp-controller="Produto" method="post">
        <fieldset>
            <legend>Editar Produto</legend>
            <label asp-for="Id">Id:</label>
            <input asp-for="Id" readonly type="text" placeholder="Id" /><br />

            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" type="text" placeholder="nome do produto" /><br />

            <label asp-for="Descricao">Descrição:</label>
            <input asp-for="Descricao" type="text" placeholder="descrição do produto" /><br />

            <label asp-for="Preco">Preço:</label>
            <input asp-for="Preco" type="text" placeholder="preço do produto" /><br />

            <label asp-for="Quantidade">Quantidade:</label>
            <input asp-for="Quantidade" type="text" placeholder="quantidade do produto" /><br />

        </fieldset>
        <br />
        <input type="submit" value="Salvar" />
        <a asp-controller="Produto" asp-action="Index">Voltar</a>
    </form>
</body>
</html>
