@*Tecnologia da página - Razor*@

@model Paciente


<form asp-action="Alterar" asp-controller="Paciente" method="post">
    <fieldset>
        <legend>Alterar Paciente</legend>

        <label asp-for="Id">Id:</label>
        <input asp-for="Id" readonly type="text" placeholder="Id do Paciente" /><br />
        <input asp-for="Id" name="HdnId" type="hidden" />

        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" type="text" placeholder="Nome do Paciente" /><br />

        <label asp-for="Cpf">CPF:</label>
        <input asp-for="Cpf" type="text" placeholder="CPF do Paciente" /><br />

        <label asp-for="Rg">RG:</label>
        <input asp-for="Rg" type="text" placeholder="RG do Paciente" /><br />

        <label asp-for="Nascimento">Nascimento:</label>
        <input asp-for="Nascimento" type="text" placeholder="Nascimento do Paciente" /><br />

        <label asp-for="Telefone">Telefone:</label>
        <input asp-for="Telefone" type="text" placeholder="Fone do Paciente" /><br />

        <label asp-for="Email">E-Mail:</label>
        <input asp-for="Email" type="text" placeholder="E-mail do Paciente" /><br />

        <label asp-for="PlanoSaudeId">Plano de Saúde:</label>
        <select class="form-control" asp-items="@ViewBag.PlanosSaude"
                asp-for="PlanoSaudeId">
            <option> -- SELECIONE -- </option>
        </select>

        <label asp-for="Cep">CEP:</label>
        <input asp-for="Cep" type="text" placeholder="CEP do Paciente" /><br />

        <label asp-for="Rua">Rua:</label>
        <input asp-for="Rua" type="text" placeholder="Rua do Paciente" /><br />

        <label asp-for="Numero">Número:</label>
        <input asp-for="Numero" type="text" placeholder="Núm do Paciente" /><br />

        <label asp-for="Bairro">Bairro:</label>
        <input asp-for="Bairro" type="text" placeholder="Bairro do Paciente" /><br />

        <label asp-for="Cidade">Cidade:</label>
        <input asp-for="Cidade" type="text" placeholder="Cidade do Paciente" /><br />

        <label asp-for="Estado">Estado:</label>
        <input asp-for="Estado" type="text" placeholder="UF do Paciente" /><br />

        <input type="submit" value="Salvar" />
    </fieldset>
</form>
