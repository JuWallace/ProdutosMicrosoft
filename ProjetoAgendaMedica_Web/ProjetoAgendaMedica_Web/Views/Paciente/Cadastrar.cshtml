@*Tecnologia da página - Razor*@
@model Paciente

<form asp-action="Cadastrar" asp-controller="Paciente" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Paciente</legend>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input class="form-control" asp-for="Nome" type="text" placeholder="Nome do Paciente" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <label asp-for="CPF">CPF:</label>
            <input class="form-control" asp-for="CPF" type="text" placeholder="CPF do Paciente" />
            <span class="text-danger" asp-validation-for="CPF"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fone">Fone:</label>
            <input class="form-control" asp-for="Fone" type="text" placeholder="Fone do Paciente" />
            <span class="text-danger" asp-validation-for="Fone"></span>
        </div>

        <div class="form-group">
            <label asp-for="PlanoSaudeId">Plano de Saúde:</label>
            <select class="form-control" asp-items="@ViewBag.PlanosSaude"
                    asp-for="PlanoSaudeId">
                <option> -- SELECIONE -- </option>
            </select>
        </div>
        <input class="btn btn-info" type="submit" value="Cadastrar" />
    </fieldset>
</form>
