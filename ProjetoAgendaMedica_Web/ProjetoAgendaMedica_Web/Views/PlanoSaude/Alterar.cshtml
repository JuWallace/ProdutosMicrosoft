@*Tecnologia da página - Razor*@

@model PlanoSaude

<form asp-controller="PlanoSaude" asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Plano de Saúde</legend>

        <label asp-for="Id">Id:</label>
        <input asp-for="Id" readonly type="text" placeholder="Id do Plano" /><br />
        <input asp-for="Id" name="HdnId" type="hidden" />

        <label asp-for="Plano">Plano:</label>
        <input asp-for="Plano" type="text" placeholder="Nome do Plano" /><br />

        <label asp-for="Codigo">Código:</label>
        <input asp-for="Codigo" type="text" placeholder="Código do Plano" /><br />


        <input type="submit" value="Alterar" />
    </fieldset>
</form>

